<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:hint="@string/enter_key"
        android:padding="20dp"
        android:inputType="text"
        android:autofillHints="username" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPicker"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:onClick="method1"
        android:padding="20dp"
        android:text="@string/submit_button" />

    <EditText
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:inputType="none"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:hint="@string/generated_password" />


    <LinearLayout
        android:id="@+id/checkbox_group"
        android:layout_width="wrap_content"
        android:layout_height="168dp"
        android:layout_above="@+id/btnSubmit"
        android:layout_below="@+id/et1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkBoxAlphanumeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Alphanumeric password" />

        <CheckBox
            android:id="@+id/checkBoxDecryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Decryption mode" />
    </LinearLayout>

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="55dp"
        android:layout_height="144dp"
        android:layout_below="@+id/et1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="59dp"
        android:layout_toEndOf="@+id/checkbox_group"
        android:contentDescription="@string/password_length" />

</RelativeLayout>
